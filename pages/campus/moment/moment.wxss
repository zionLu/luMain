.cardWrapper{
    width: 750rpx;
    margin: 0 auto;
    display: flex;
    align-content: center;
    justify-content: flex-start;
    flex-direction: column;
    background: #FFFFFF;
    font-size: 25rpx;
}
.cardHead{
    display: flex;
    align-content: center;
    justify-content: flex-start;
}
.cardAvarat{
    width: 60rpx;
    height: 60rpx;
    margin: 20rpx 0 0 30rpx;
}
.cardUserInfo{
    margin: 20rpx;
    font-size: 20rpx;
    color: #888888;
}
.cardUserName{
    font-size: 25rpx;
    font-weight: bold;   
    color: #353535;
}
.cardContent{
    margin: 0 30rpx 20rpx;
}
.cardImage{
    width: 200rpx;
    height: 200rpx;
    margin: 0 30rpx 20rpx;
}
.handle{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    border-top: 1rpx solid #F1F1F1;
    background: #FFFFFF;
    color: #888888;
}
.handleIcon{
    width: 30rpx;
    height: 30rpx;
    margin: 20rpx;
}
.handleComment{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    border-right: 1px solid #F1F1F1;
}
.handlePraise{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}
.comments{
    border-bottom: 60rpx solid #ECEDF1;
    border-top: 20rpx solid #ECEDF1;
}
.comment{
    padding: 20rpx 30rpx;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    border-bottom: 1rpx solid #F1F1F1;
}
.commentAvarat{
    width: 60rpx;
    height: 60rpx;
    margin-right: 30rpx;
}
.commentInfo{
    flex: 1;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    flex-direction: column;
    color: #353535;
}
.commentUserName{
    font-weight: bold;
}
.commentWrapper{
    position: fixed;
    bottom: 0;
    width: 750rpx;
    color: #353535;
    font-size: 25rpx;
    background: #FFFFFF;
    border-top: 1rpx solid #CCCCCC;
}
input{
    padding: 0 15rpx;
    border-bottom: 1rpx solid #F1F1F1;
    height: 80rpx;
}
.AnonWrapper{
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 15rpx;
}
switch{
    margin-left: 20rpx;
}
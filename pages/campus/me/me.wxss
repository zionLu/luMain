.bg{
    width: 750rpx;
    height: 400rpx;
}
swiper{
    width: 750rpx;
    height: 400rpx;
}
.userWrapper{
    width: 100%;
    height: 150rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    top: -120rpx;
}
.userAvatar{
    width: 150rpx;
    height: 150rpx;
    position: absolute;
    right: 20rpx;
    margin-right: 10rpx;
}
.userName{
    font-size: 40rpx;
    line-height: 100rpx;
    color: #29BB73;
    font-weight: 600;
    margin-right: 20rpx;
    position: absolute;
    right: 190rpx;
    top: 0rpx;
}
.userId{
    font-size: 26rpx;
    line-height: 40rpx;
}
.cards{
    position: relative;
    top: -70rpx;
}
.cardWrapper{
    width: 730rpx;
    margin: 0 auto 20rpx;
    display: flex;
    align-content: center;
    justify-content: flex-start;
    flex-direction: column;
    background: #FFFFFF;
    border-radius: 20rpx;
    font-size: 25rpx;
}
.cardHead{
    display: flex;
    align-content: center;
    justify-content: flex-start;
}
.cardAvarat{
    width: 60rpx;
    height: 60rpx;
    margin: 20rpx 0 0 30rpx;
}
.cardUserInfo{
    flex: 10;
    margin: 20rpx;
    font-size: 20rpx;
    color: #888888;
}
.cardUserName{
    font-size: 25rpx;   
    color: #353535;
}
icon{
    flex: 1;
    margin: 20rpx;
}
.cardContent{
    margin: 0 30rpx 20rpx;
}
.cardImage{
    width: 200rpx;
    height: 200rpx;
    margin: 0 30rpx 20rpx;
}
.handle{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    border-top: 1rpx solid #F1F1F1;
    color: #888888;
}
.handleIcon{
    width: 30rpx;
    height: 30rpx;
    margin: 20rpx;
}
.handleComment{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    border-right: 1px solid #F1F1F1;
}
.handlePraise{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}